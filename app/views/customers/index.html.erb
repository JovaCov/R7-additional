<h1>Customers</h1>

<div id="customers">
  <table>
    <thread>
    <tr>
      <th>Full Name</th>
      <th>Orders</th>
      <th colspan="1"></th>
    </tr>
    </thread>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.full_name %></td>
          <td><%= customer.orders.count %></td>
          <td><%= link_to "Show", customer %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
  
</div>

<%= link_to "New customer", new_customer_path %>
